.topBox {
  position: relative;
  width: 100%;
  height: 600rpx;
}
.topBox .txtBox {
  position: absolute;
  z-index: 100;
  margin: 30rpx 0 0 30rpx;
}
.topBox .txtBox .txt1 {
  font-size: 48rpx;
  font-weight: 800;
  color: white;
  line-height: 67rpx;
}
.topBox .txtBox .line {
  margin: 30rpx 0 24rpx;
  display: block;
  width: 80rpx;
  height: 6rpx;
  background: #dff5ac;
}
.topBox .txtBox .txt2 {
  font-size: 30rpx;
  font-weight: 400;
  color: white;
  line-height: 42rpx;
}
.topBox image {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.kfItem {
  margin: 0 24rpx 30rpx;
  padding: 34rpx 0;
  background: white;
  box-shadow: 0 2rpx 10rpx 0 rgba(0, 0, 0, 0.3);
  border-radius: 20rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.kfItem:before {
  position: absolute;
  right: 30rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  color: #999;
  font-size: 41rpx;
}
.kfItem .icon-kefu {
  position: absolute;
  left: 30rpx;
  color: #ffa11f;
  font-size: 56rpx;
  float: left;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.kfItem .kfTxt {
  padding-left: 113rpx;
  display: flex;
  overflow: hidden;
  flex-direction: column;
  justify-content: center;
}
.kfItem .kfTxt .phone {
  font-size: 30rpx;
  font-weight: 400;
  color: #7b7b7b;
  line-height: 40rpx;
}
.kfItem .kfTxt label {
  font-size: 38rpx;
  font-weight: 600;
  color: #1a1a1a;
  line-height: 53rpx;
}

