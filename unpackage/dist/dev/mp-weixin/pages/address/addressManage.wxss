.uni-list-cell {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.uni-input-placeholder {
  color: #999;
}
.container {
  position: relative;
  width: 100vw;
  height: 90vh;
  overflow: hidden;
  background: #f7f7f7;
}
.input-content {
  background: #fff;
}
.input-item {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: auto;
  padding: 16rpx 30rpx;
  background: #fff;
  border-bottom: 1px solid #f5f5f7;
}
.input-item:last-child {
  margin-bottom: 0;
}
.input-item .pieckerInput {
  color: #333;
  width: calc(100% - 230rpx);
  font-size: 30rpx;
  display: inline-block;
  line-height: 60rpx;
}
.input-item .xiangxi {
  width: 100%;
  height: 162rpx;
  padding: 14rpx 10rpx;
  font-size: 30rpx;
}
.input-item .tit {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #303133;
  width: 200rpx;
}
.input-item .iconfont {
  color: #999;
  line-height: 60rpx;
  position: absolute;
  right: 30rpx;
}
.input-item input {
  height: 60rpx;
  font-size: 30rpx;
  color: #303133;
  flex: 1;
  width: calc(100% - 50rpx);
  text-align: right;
}
.input-item .clear_input {
  position: absolute;
  right: 0;
  top: 10rpx;
  padding: 10rpx;
}
.input-item .clear_input .iconfont {
  font-size: 40rpx;
  color: #909399;
}
.confirm-btn {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 4px;
  background: #FDD100;
  color: #fff;
  font-size: 32rpx;
}
.confirm-btn:after {
  border-radius: 100px;
  border: none;
}
.moren {
  border-top: 20rpx solid #f7f7f7;
  padding: 0 30rpx;
  height: 110rpx;
  line-height: 90rpx;
  overflow: hidden;
  font-size: 30rpx;
}
.moren .uni-list-cell-db {
  color: #333;
  display: flex;
  justify-content: space-between;
  width: 100%;
}
.moren .kaiguan {
  float: right;
}
.allinfo {
  width: 100%;
  height: 100%;
  background: #fff;
}
.xzdz .box01 {
  width: 94%;
  height: 45px;
  border-bottom: 1px solid #f7f7f7;
  margin-left: 3%;
}
.xzdz .box01 input {
  width: 72%;
  height: 45px;
  float: right;
}
.xzdz .box01 text {
  width: 70px;
  line-height: 45px;
}
.xzdz .box01.mr .iconfont {
  line-height: 42px;
  font-size: 18px;
  vertical-align: middle;
}
.xzdz .box01.gouxuan .iconfont:before {
  color: #4499ee;
  content: "\e61e";
}
.allinfo .btn {
  width: 100%;
  height: 45px;
  line-height: 45px;
  background: #4499ee;
  border-radius: 0;
  position: fixed;
  bottom: 0;
  color: #fff;
  font-size: 16px;
}
.pickerMask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

