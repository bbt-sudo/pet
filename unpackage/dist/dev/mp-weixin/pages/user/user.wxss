page {
  font-size: 28rpx;
  background: #f5f5f5;
}
page .container {
  height: calc(100% - 100rpx);
}
page .header {
  position: relative;
  width: 100%;
  height: 400rpx;
  background-size: cover;
  overflow: hidden;
  height: 400rpx;
  background-size: 100% 100%;
}
page .header .title-contents {
  position: relative;
  top: 0;
  width: 100%;
  height: calc(25px + 88rpx);
  z-index: 99;
  color: #fff;
}
page .header .title-contents .top-view {
  width: 100%;
  height: 25px;
  background: #fb8173;
}
page .header .title-contents .header_pic {
  width: 100%;
  height: 280rpx;
  position: relative;
}
page .header .title-contents .header_pic image {
  width: 100%;
  max-height: 400rpx;
}
page .header .title-contents .header_content {
  position: absolute;
  width: 94%;
  margin: 0 3%;
  top: 50rpx;
}
page .header .title-contents .header_content .header_content_top {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-end;
}
page .header .title-contents .header_content .header_content_top .iconfont {
  font-size: 52rpx;
  margin-left: 20rpx;
}
page .header .title-contents .header_content .header_content_perple {
  height: 120rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  font-size: 28rpx;
}
page .header .title-contents .header_content .header_content_perple image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
  border-radius: 50%;
}
page .order-section {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fff;
  border-radius: 10rpx;
  height: 180rpx;
  margin: -120rpx auto 0;
  border-radius: 10px;
  width: 96%;
  position: relative;
  z-index: 998;
  background: #fff;
}
page .order-section .order-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
}
page .order-section .yticon,
page .order-section .iconfont {
  font-size: 48rpx;
  margin-bottom: 18rpx;
  color: #FDD100;
}
page .order-section .icon-shouhoutuikuan {
  font-size: 44rpx;
}
page .my_list {
  width: 94%;
  margin: 40rpx 3% 40rpx;
  background: #fff;
  border-radius: 15rpx;
}
page .my_list .my_list_menu {
  width: 94%;
  margin: 0 3%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
}
page .my_list .my_list_menu .iconfont, page .my_list .my_list_menu .yticon {
  width: 15%;
  text-align: center;
  color: #888;
}
page .my_list .my_list_menu view {
  width: 85%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #eeeeee;
}
page .my_list .my_list_menu view .iconfont {
  text-align: right;
  color: #cbcbcb;
}

