/* 商品列表 */
.goods-list {
  padding: 20rpx 30rpx;
}
.goods-list .eva-box {
  display: flex;
  padding: 20rpx 0;
  flex-wrap: wrap;
  border-bottom: 1px solid #eee;
}
.goods-list .eva-box .eva_box_top {
  display: flex;
  width: 100%;
}
.goods-list .eva-box .portrait {
  flex-shrink: 0;
  width: 80rpx;
  height: 80rpx;
  border-radius: 100px;
}
.goods-list .eva-box .userInfo {
  display: flex;
  height: 80rpx;
  flex-direction: column;
  margin-left: 20rpx;
  justify-content: space-between;
}
.goods-list .eva-box .star {
  flex: 1;
  text-align: right;
}
.goods-list .eva-box .star text {
  color: #aaa;
}
.goods-list .eva-box .star text.act {
  color: #e33b2d;
}
.goods-list .eva-box .right {
  display: flex;
  flex-direction: column;
  font-size: #666;
  color: #666;
  padding-left: 100rpx;
}
.goods-list .eva-box .right .con {
  font-size: #666;
  color: #666;
  padding: 20rpx 0;
}
.goods-list .eva-box .right .img_wrap {
  display: flex;
  flex-wrap: wrap;
}
.goods-list .eva-box .right .img {
  width: 180rpx;
  height: 180rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
}
.goods-list .eva-box .right .img image {
  width: 180rpx;
  height: 180rpx;
}
.goods-list .eva-box .right .bot {
  display: flex;
  justify-content: space-between;
  font-size: #666;
  color: #666;
}

