    <block wx:for="{{$root.l0}}" wx:for-item="item" wx:for-index="__i0__">
      <view class="eva-box">
        <view class="eva_box_top">
          <!-- <image class="portrait" src="{{item.$orig.userInfo.avatar}}" mode="aspectFill"></image> -->
