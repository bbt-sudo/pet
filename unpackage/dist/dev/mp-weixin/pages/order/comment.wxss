.comment_final {
  width: 100%;
  height: auto;
  overflow: hidden;
  margin-top: 20rpx;
  background: white;
  padding: 30rpx 30rpx 0 30rpx;
}
.comment_final .comment_finalBox {
  width: 100%;
  height: auto;
  overflow: hidden;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}
.comment_final .comment_finalBox .comment_finalTit {
  font-size: 24rpx;
  width: 120rpx;
  display: block;
}
.comment_final .comment_finalBox .comment_xing {
  flex: 1;
  height: auto;
  overflow: hidden;
  padding-left: 48rpx;
}
.comment_final .comment_finalBox .comment_xing text {
  font-size: 48rpx;
  color: #eeeeee;
  margin-right: 8rpx;
}
.comment_final .comment_finalBox .comment_xing .act {
  color: #f7c243;
}
.comment_share {
  width: 100%;
  height: auto;
  overflow: hidden;
  background: white;
  padding: 0 30rpx;
}
.comment_share textarea {
  width: 100%;
  height: 304rpx;
  border-radius: 20rpx;
  background: #f6f6f6;
  font-size: 30rpx;
  color: #333;
  line-height: 33rpx;
  padding: 24rpx;
}
.comment_share .comment_pa {
  display: block;
  font-size: 32rpx;
  color: #333;
  padding: 32rpx 0 24rpx;
}
.comment_share image {
  display: block;
  width: 160rpx;
  height: 160rpx;
}
.comment_share .comment_shareBox {
  width: 100%;
  height: auto;
  overflow: hidden;
}
.comment_share .comment_shareBox .iconfont {
  font-size: 24rpx;
  color: #999999;
  line-height: 88rpx;
  float: left;
  display: block;
}
.comment_share .comment_shareBox .iconfont.act {
  color: #e33b2d;
}
.comment_share .comment_shareBox .iconfont.act:before {
  content: '\e655';
}
.comment_share .comment_shareBox .comment_pb {
  font-size: 24rpx;
  color: #333333;
  margin-left: 15rpx;
  line-height: 90rpx;
  display: block;
  float: left;
}
.comment_share .comment_shareBox .comment_pc {
  float: right;
  color: #bfbfbf;
  font-size: 24rpx;
  line-height: 90rpx;
}
.sale_good {
  width: 100%;
  height: auto;
  overflow: hidden;
  padding: 30rpx;
  background: white;
}
.sale_good image {
  display: block;
  width: 200rpx;
  height: 200rpx;
  float: left;
}
.sale_good .sale_goodBox {
  width: calc(100% - 200rpx);
  height: 200rpx;
  position: relative;
  float: left;
  padding-left: 24rpx;
}
.sale_good .sale_goodBox .sale_pa {
  font-size: 24rpx;
  line-height: 44rpx;
  color: #000000;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.sale_good .sale_goodBox .sale_pb {
  width: calc(100% - 24rpx);
  font-size: 32rpx;
  color: #e33b2d;
  position: absolute;
  line-height: 44rpx;
  font-weight: bold;
  bottom: 7rpx;
}
.sale_good .sale_goodBox .sale_pb .num {
  font-size: 24rpx;
  color: #999999;
  float: right;
  font-weight: normal;
  vertical-align: middle;
  line-height: 44rpx;
}
.submit {
  width: 600rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  background: #FDD100;
  border-radius: 4px;
  margin: 60rpx auto;
  color: #fff;
  font-size: 34rpx;
}
.upload-content {
  padding: 24rpx 0 0 28rpx;
  background-color: #fff;
  overflow: hidden;
}
.upload-item {
  position: relative;
  float: left;
  width: 150rpx;
  height: 150rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
}
.upload-item:nth-child(4n) {
  margin-right: 0;
}
.upload-item .upload-img {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.upload-item .upload-del-btn {
  position: absolute;
  right: -16rpx;
  top: -14rpx;
  width: 36rpx;
  height: 36rpx;
  border: 4rpx solid #fff;
  border-radius: 100px;
}
.upload-item .upload-progress {
  position: absolute;
  left: 0;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  color: #fff;
  font-size: 24rpx;
  border-radius: 8rpx;
}
.upload-add-btn {
  position: relative;
  float: left;
  width: 150rpx;
  height: 150rpx;
  z-index: 99;
  border-radius: 8rpx;
  background: #f9f9f9;
}
.upload-add-btn:before, .upload-add-btn:after {
  content: ' ';
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  width: 4rpx;
  height: 60rpx;
  background-color: #d6d6d6;
}
.upload-add-btn:after {
  width: 60rpx;
  height: 4rpx;
}
.upload-add-btn:active {
  background-color: #f7f7f7;
}

